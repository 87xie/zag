{
  "root": true,
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/panda/*": ["./panda/*"],
      "@/contentlayer": [".contentlayer/generated"],
      "@/*": ["src/*"]
    }
  },
  "plugins": [{ "name": "next" }],
  "verbatimModuleSyntax": false,
  "isolatedModules": true,
  "include": [
    "next-env.d.ts",
    ".contentlayer",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
