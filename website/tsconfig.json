{
  "root": true,
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/panda/*": ["./panda/*"],
      "@/contentlayer": [".contentlayer/generated"],
      "@/*": ["src/*"]
    }
  },
  "plugins": [{ "name": "next" }],
  "target": "es6",
  "verbatimModuleSyntax": false,
  "isolatedModules": true,
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
