{
  "name": "ui-machines",
  "private": true,
  "description": "UI machines monorepo root package",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/core.git"
  },
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "license": "MIT",
  "scripts": {
    "build": "preconstruct build",
    "clean": "yarn workspaces run clean",
    "start:react": "cd examples/next-ts && yarn dev",
    "start:vue": "cd examples/vue-ts && yarn dev",
    "start:solid": "cd examples/solid-ts && yarn dev",
    "cypress:react": "start-server-and-test start:react http://localhost:3000 cypress:dev",
    "cypress:run": "cypress run",
    "cypress:dev": "cypress open",
    "fix:pkgs": "manypkg fix",
    "fix:preconstruct": "preconstruct fix",
    "gen:machine": "ts-node scripts/generate-machine.ts",
    "lint": "npm-run-all lint:**",
    "lint:code": "eslint . --ext .js,.jsx,.ts,.tsx -c .eslintrc",
    "lint:pkgs": "manypkg check",
    "lint:types": "tsc --noEmit --incremental",
    "lint:validate": "preconstruct validate",
    "pkg": "manypkg run",
    "prebuild": "yarn clean",
    "prepare": "npm-run-all -s prepare:**",
    "prepare:husky": "husky install",
    "prepare:preconstruct": "preconstruct dev",
    "release": "changeset publish",
    "start": "preconstruct watch",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --runInBand"
  },
  "dependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.2",
    "@babel/eslint-parser": "^7.14.2",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.14.0",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@manypkg/cli": "^0.17.0",
    "@preconstruct/cli": "^2.1.0",
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/form-serialize": "^0.7.1",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.169",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "axe-core": "^4.3.3",
    "commitlint": "^12.1.4",
    "cypress": "^8.5.0",
    "cypress-real-events": "^1.5.1",
    "cypress-axe": "^0.13.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-testing-library": "^4.4.0",
    "form-serialize": "^0.7.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^26.6.2",
    "jest-watch-typeahead": "^0.6.3",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "node-plop": "^0.26.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "4.4.3"
  },
  "preconstruct": {
    "packages": [
      "packages/utilities",
      "packages/machines",
      "packages/core/*"
    ]
  },
  "workspaces": [
    "packages/utilities",
    "packages/machines",
    "packages/core/*",
    "examples/*"
  ],
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "**/*.{md,yml,json,babelrc,eslintrc,prettierrc}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 120,
    "proseWrap": "always",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
