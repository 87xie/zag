{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@ui-machines/vue": ["../../packages/frameworks/vue/src"],
      "@ui-machines/core": ["../../packages/core/src"],
      "@ui-machines/web": ["../../packages/machines/src"]
    },
    "types": ["vite-plugin-pages/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
